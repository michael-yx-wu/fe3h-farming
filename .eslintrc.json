{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "import"],
    "extends": [
        "plugin:prettier/recommended",
        "plugin:import/typescript"
    ],
    "rules": {
        "import/order": [
            "error",
            {
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "tabWidth": 4,
                "trailingComma": "all",
                "arrowParens": "avoid"
            }
        ]
    }
}